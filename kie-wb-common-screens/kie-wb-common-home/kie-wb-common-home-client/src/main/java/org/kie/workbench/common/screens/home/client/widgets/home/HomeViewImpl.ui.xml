<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:org.kie.workbench.common.screens.home.client.widgets.carousel">

  <ui:with field="resources" type="org.kie.workbench.common.screens.home.client.resources.HomeResources"/>

  <g:HTMLPanel>
    <div class="container">
     <h2 ui:field="title"/>
     <hr/>
     <p></p>
     <g:HorizontalPanel width="100%"  ui:field="columns"/>
     <c:CarouselWidget ui:field="carousel"/>
     </div>
  </g:HTMLPanel>
</ui:UiBinder>